<%= form_for(@staff) do |f| %>
  <% if @staff.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@staff.errors.count, "错误") %> 导致数据无法提交:</h2>
      <ul>
        <% @staff.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="controls">
  <div class="field">
    <%= f.label :姓名 %>：&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :登录名 %>：&nbsp;&nbsp;&nbsp;
    <%= f.text_field :ename %>
  </div>
    <div class="field">
    <%= f.label :登录密码%>：
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :性别 %>：&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.text_field :sex%>
  </div>
  <div class="field">
    <%= f.label :年龄 %>：&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :邮箱 %>：&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :电话 %>：&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.number_field :phone %>
  </div>
  <div class="field">
    <%= f.label :QQ %>：&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.number_field :QQ %>
  </div>
  <div class="field">
    <%= f.label :地址 %>：&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :备注信息 %>：
    <%= f.text_field :remark %>
  </div>
  <div class="btn btn-default">
    <%= f.submit "提交"%>
  </div>
<% end %>
