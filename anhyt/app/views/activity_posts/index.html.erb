<div class="jumbotron-show">
<h1>记录列表</h1>

<table class="table table-striped col-lg-8">
  <thead>
    <tr  class="success">
      <th>标题</th>
      <th>内容</th>
      <th>创建时间</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% @activity_posts.each do |activity_post| %>
      <tr>
        <td><%= truncate(activity_post.title,length: 15) %></td>
        <td><%= raw truncate(activity_post.content.gsub(/<.*?>/,''),length: 15) %></td>
        <td><%= activity_post.created_at.to_s[0,19]%></td>
        <td><%= link_to '查看', activity_post %></td>
        <td><%= link_to '编辑', edit_activity_post_path(activity_post) %></td>
        <td><%= link_to '删除', activity_post, method: :delete, data: { confirm: '确定删除该文章?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '创建文章', new_activity_post_path,class:"btn btn-primary" %>
</div>
